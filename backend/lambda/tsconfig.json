{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": ["../src/models/*"],
      "@utils/*": ["../src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 